<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <link href="/static/bootstrap/css/bootstrap.min.css" rel="stylesheet">
    <base target="_parent" />
  </head>
  <body>
    <div class="navbar navbar-default navbar-fixed-top" role="navigation">
      <div class="container">
        <div class="navbar-header">
          <ul class="nav navbar-nav">
           <!-- Header -->
            <li>
              <% if @theme["topmenu_logo_data"] %>
                <a class="navbar-brand" href="/">
                  <img src="data:image/png;base64,<%= @theme["topmenu_logo_data"] %>" style="<%= @theme["topmenu_logo_style"] %>" alt="Software Factory" title="Software Factory" />
                </a>
              <% else %>
                <a class="navbar-brand" href="/">Software Factory</a>
              <% end %>
            </li>
            <li>
              <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#topmenu-navbar-collapse" aria-expanded="false">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
              </button>
            </li>
          </ul>
        </div>
        <!-- Menu -->
        <div class="collapse navbar-collapse pull-right" id="topmenu-navbar-collapse">
          <ul class="nav navbar-nav">
            <% if @services.include?('SFGerrit') %>
              <li><a href="/r/" target="_top">Gerrit</a></li>
            <% end %>

            <% if @services.include?('jenkins') %>
              <li><a href="/jenkins/" target="_top">Jenkins</a></li>
            <% end %>

            <li><a href="/zuul/" target="_top">Zuul</a></li>

            <% if not @theme["topmenu_hide_redmine"] %>
              <% if @services.include?('SFRedmine') %>
                <li><a href="/redmine/" target="_top">Redmine</a></li>
              <% end %>
            <% end %>

            <% if not @theme["topmenu_hide_etherpad"] %>
              <% if @services.include?('etherpad') %>
                <li><a href="/etherpad/" target="_top">Etherpad</a></li>
              <% end %>
            <% end %>

            <% if not @theme["topmenu_hide_paste"] %>
              <% if @services.include?('lodgeit') %>
                <li><a href="/paste/" target="_top">Paste</a></li>
              <% end %>
            <% end %>

            <%= @theme["topmenu_custom_entry"] %>
            <li><p class="navbar-btn" style="margin-right=18px;">
		          <a id="logout-btn" href="/r/logout" target="_top" class="btn btn-danger">Logout</a>
		          <a id="login-btn" href="/r/login" target="_top" class="btn btn-primary">Login</a>
		        </p></li>
          </ul>
        </div>
      </div>
    </div>
  </body>
  <script type="text/javascript" src="/static/js/jquery.min.js"></script>
  <script type="text/javascript" src="/static/bootstrap/js/bootstrap.min.js"></script>
  <script type="text/javascript" src="/static/js/menu.js"></script>
</html>
