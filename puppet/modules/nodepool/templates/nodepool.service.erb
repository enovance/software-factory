[Unit]
Description=Nodepool daemon
After=network.target

[Service]
Type=simple
User=jenkins
Group=jenkins
ExecStart=/usr/bin/nodepoold -p /var/run/nodepool/nodepool.pid -l /etc/nodepool/nodepool.logging.conf
<% if nodepool['statsd_host'] -%>
Environment="STATSD_HOST=<%= nodepool['statsd_host'] %>" "STATSD_PORT=8125"
<% end -%>
KillSignal=SIGUSR1

[Install]
WantedBy=multi-user.target
