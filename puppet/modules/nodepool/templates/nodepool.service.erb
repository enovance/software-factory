[Unit]
Description=Nodepool daemon
After=network.target

[Service]
Type=simple
User=jenkins
Group=jenkins
ExecStart=/usr/bin/nodepoold -p /var/run/nodepool/nodepool.pid -l /etc/nodepool/nodepool.logging.conf
Environment="NODEPOOL_SF_PUBLICIP=<%= scope.function_hiera(["public_ip"]) %>" "NODEPOOL_SF_TOPDOMAIN=<%= scope.function_hiera(["top_domain"]) %>"
KillSignal=SIGUSR1

[Install]
WantedBy=multi-user.target
