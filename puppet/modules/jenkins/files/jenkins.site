# Managed by Puppet
<VirtualHost *:8080>
    ProxyVia On
    ProxyRequests Off

    ProxyPass /jenkins/ http://127.0.0.1:8082/jenkins/ nocanon retry=1 acquire=3000 timeout=600 Keepalive=On
    ProxyPassReverse /jenkins/ http://127.0.0.1:8082/jenkins/

    # jjb fails with "jenkins.NotFoundException: Requested item could not be found" when trying to access:
    # http://jenkins.sftests.com:8080/api/json?tree=jobs[url,color,name,jobs]
    ProxyPass /api/ http://127.0.0.1:8082/jenkins/api/ nocanon retry=1 acquire=3000 timeout=600 Keepalive=On
    ProxyPassReverse /api/ http://127.0.0.1:8082/jenkins/api/

    ProxyPreserveHost On
    AllowEncodedSlashes NoDecode
    <Proxy *>
        Options FollowSymLinks MultiViews
        AllowOverride All
        Order allow,deny
        allow from all
    </Proxy>

    <LocationMatch "/jenkins/">
        AuthType basic
        AuthBasicProvider file
        AuthUserFile /etc/httpd/htpasswd
        AuthName "Jenkins"
        Require valid-user
        RewriteEngine On
        RewriteCond %{LA-U:REMOTE_USER} (.+)
        RewriteRule .* - [E=RU:%1,NS]
        RequestHeader set X-Forwarded-User %{RU}e
    </LocationMatch>
</VirtualHost>

<VirtualHost *:8081>
    ProxyVia On
    ProxyRequests Off

    ProxyPass /jenkins/ http://127.0.0.1:8082/jenkins/ nocanon retry=1 acquire=3000 timeout=600 Keepalive=On
    ProxyPassReverse /jenkins/ http://127.0.0.1:8082/jenkins/

    ProxyPreserveHost On
    AllowEncodedSlashes NoDecode
    <Proxy *>
        Options FollowSymLinks MultiViews
        AllowOverride All
        Order allow,deny
        allow from all
    </Proxy>

    <LocationMatch "/jenkins/">
        RequestHeader unset X-Forwarded-User
        <If "%{HTTP_COOKIE} =~ /auth_pubtkt=.*/">
            AuthType mod_auth_pubtkt
            TKTAuthLoginURL /auth/login
            TKTAuthFakeBasicAuth on
            TKTAuthDebug 1
            AuthName "Jenkins"
            require valid-user
            RewriteEngine On
            RewriteCond %{LA-U:REMOTE_USER} (.+)
            RewriteRule .* - [E=RU:%1,NS]
            RequestHeader set X-Forwarded-User %{RU}e
        </If>
    </LocationMatch>
</VirtualHost>
