<domain type='lxc'>
  <name>sf-install-server</name>
  <memory>32768</memory>
  <os>
    <type>exe</type>
    <init>/sbin/init</init>
  </os>
  <vcpu>1</vcpu>
  <clock offset='utc'/>
  <on_poweroff>destroy</on_poweroff>
  <on_reboot>restart</on_reboot>
  <on_crash>destroy</on_crash>
  <devices>
    <emulator>/usr/libexec/libvirt_lxc</emulator>
    <filesystem type='mount'>
      <source dir='/srv/sf/install-server/' />
      <target dir='/'/>
    </filesystem>
    <interface type='network'>
      <source network='sf-net'/>
      <target dev='sf-vnet01'/>
      <mac address="00:11:22:33:44:55"/>
      <ip address="192.168.135.49" netmask="255.255.255.0" />
    </interface>
    <console type='pty' />
  </devices>
</domain>
