[Unit]
Description=Jenkins Daemon
After=syslog.target

[Service]
Type=simple
Environment="JENKINS_HOME=/var/lib/jenkins"
ExecStart=/usr/bin/java -Xmx<%= @settings['jenkins_heap_limit'] %> -jar /usr/lib/jenkins/jenkins.war --webroot=/var/cache/jenkins/war --httpPort=8082 --ajp13Port=-1 --prefix=/jenkins --httpListenAddress=0.0.0.0
User=jenkins

[Install]
WantedBy=multi-user.target
