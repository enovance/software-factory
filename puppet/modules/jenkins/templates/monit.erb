check process jenkins
    with pidfile /var/run/jenkins/jenkins.pid
    start program = "/usr/bin/systemctl start jenkins"
    stop program = "/usr/bin/systemctl stop jenkins"
    if failed host <%= @ipaddress %> port 8080 protocol http with timeout 60 seconds for 5 cycles then alert

check process httpd with pidfile /var/run/apache2.pid
    start program = "/usr/bin/systemctl start httpd"
    stop program = "/usr/bin/systemctl stop httpd"
    if failed host <%= @ipaddress %> port 80 protocol http with timeout 60 seconds for 5 cycles then alert

