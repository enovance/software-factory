[gearman]
server=127.0.0.1

[gearman_server]
start=true
log_config=/etc/zuul/gearman-logging.conf

[gerrit]
server=<%= @settings['gerrit_host'] %>
# baseurl is only use to fetch git refs on diff url than server.
# Using baseurl we cannot modify url zuul report to user
baseurl=http://<%= scope.function_hiera(["top_domain"]) %>/r/
user=<%= @settings['gerrit_username'] %>
sshkey=/var/lib/zuul/.ssh/id_rsa

[zuul]
layout_config=/etc/zuul/layout.yaml
log_config=/etc/zuul/logging.conf
pidfile=/var/run/zuul/zuul.pid
state_dir=/var/lib/zuul
status_url=http://<%= scope.function_hiera(["zuul_pub_url"]) %>
job_name_in_report=true
report_times=true

[merger]
git_dir=/var/lib/zuul/git
;git_user_email=zuul@example.com
;git_user_name=zuul
zuul_url=http://<%= scope.function_hiera(["top_domain"]) %>/zuul/p
log_config=/etc/zuul/merger-logging.conf

<% if scope.function_hiera(['swift_logsexport_activated']) != false %>
[swift]
default_container=<%= scope.function_hiera(['swift_logsexport_container']) %>
default_logserver_prefix=<%= scope.function_hiera(['swift_logsexport_logserver_prefix']) %>
authurl=<%= scope.function_hiera(['swift_logsexport_authurl']) %>
X-Storage-Url=<%= scope.function_hiera(['swift_logsexport_x_storage_url']) %>
user=<%= scope.function_hiera(['swift_logsexport_username']) %>
tenant_name=<%= scope.function_hiera(['swift_logsexport_tenantname']) %>
key=<%= scope.function_hiera(['swift_logsexport_password']) %>
auth_version=<%= scope.function_hiera(['swift_logsexport_authversion']) %>
<% end %>

[smtp]
server=localhost
port=25
default_from=zuul@<%= scope.function_hiera(["top_domain"]) %>
default_to=<%= scope.function_hiera(["admin_mail"]) %>
