#!/bin/sh
mysqldump -u root -p<%= @mysql_root_pwd %> \
    --databases gerrit | \
        gzip -9 | \
        ssh root@managesf.<%= @fqdn %> tee /root/gerritdb.sql.gz > /dev/null
tar --absolute-names -cf - /home/gerrit/site_path/git | /usr/local/bin/bup split -r root@managesf.<%= @fqdn %>: -n gerrit
