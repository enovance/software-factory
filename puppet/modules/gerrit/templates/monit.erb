check process gerrit
    with pidfile /home/gerrit/site_path/logs/gerrit.pid 
    start program "/etc/init.d/gerrit start"
    stop program "/etc/init.d/gerrit stop"
    if failed host 127.0.0.1 port 8000 protocol http with timeout 60 seconds for 5 cycles then alert
    if failed host <%= @ipaddress %> port 29418 protocol ssh with timeout 60 seconds for 5 cycles then alert

check process httpd with pidfile /var/run/apache2.pid 
    start program = "/etc/init.d/apache2 start"
    stop program = "/etc/init.d/apache2 stop"
    if failed host <%= @ipaddress %> port 80 protocol http with timeout 60 seconds for 5 cycles then alert

