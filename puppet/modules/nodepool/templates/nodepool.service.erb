[Unit]
Description=Nodepool daemon
After=network.target

[Service]
Type=simple
User=jenkins
Group=jenkins
ExecStart=/usr/bin/nodepoold -p /var/run/nodepool/nodepool.pid -l /etc/nodepool/nodepool.logging.conf
Environment="NODEPOOL_SF_PUBLICIP=<%= @nodepool["public_ip"] %>" "NODEPOOL_SF_TOPDOMAIN=<%= @fqdn %>"
KillSignal=SIGUSR1

[Install]
WantedBy=multi-user.target
